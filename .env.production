# Production Environment Configuration
# This file contains production environment variables
# Copy this to .env in production and update with actual values

# Server Configuration
NODE_ENV=production
PORT=3000
CLIENT_URL=https://yourdomain.com

# Database Configuration (Production PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database_name
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_CONNECTION_TIMEOUT=60000
DB_IDLE_TIMEOUT=30000

# Redis Configuration (Production Redis)
REDIS_URL=redis://username:password@host:port
REDIS_TLS=true
REDIS_POOL_SIZE=10

# JWT Configuration (Use strong secrets in production)
JWT_SECRET=your-production-jwt-secret-256-bits-minimum
JWT_REFRESH_SECRET=your-production-refresh-secret-256-bits-minimum
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Production SMTP)
EMAIL_FROM=noreply@yourdomain.com
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-production-email@yourdomain.com
SMTP_PASS=your-production-email-password

# External API Keys (Production)
GOOGLE_API_KEY=your-production-google-api-key
GOOGLE_PROJECT_ID=your-production-google-project-id
GOOGLE_AI_API_KEY=your-production-google-generative-ai-api-key

# Security Configuration
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Application Scaling
CLUSTER_WORKERS=auto
MAX_MEMORY_USAGE=512